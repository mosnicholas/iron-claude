TELEGRAM_BOT_TOKEN=123456:ABC...
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_WEBHOOK_SECRET=optional_webhook_secret

# GitHub Configuration
GITHUB_TOKEN=ghp_...
