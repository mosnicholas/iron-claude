# Telegram Bot Configuration
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Your personal chat ID
# Message the bot, then visit: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id

# Anthropic API Key
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key

# GitHub Configuration
# Personal Access Token with 'repo' scope
# Get from: GitHub Settings > Developer settings > Personal access tokens
GITHUB_TOKEN=your_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=workout-routine

# Vercel Cron Secret (optional but recommended)
# Set this in Vercel dashboard and it will be included in cron request headers
CRON_SECRET=your_cron_secret

# Environment
NODE_ENV=development
